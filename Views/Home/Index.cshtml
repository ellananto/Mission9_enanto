@{
}

@model BooksViewModel
<h1>Welcome to the Bookstore Website.</h1>

@foreach (Books x in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @x.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@x.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
        <div class="card-text p-1">Author: @x.Author</div>
        <div class="card-text p-1">Publisher: @x.Publisher</div>
        <div class="card-text p-1">ISBN: @x.Isbn</div>
        <div class="card-text p-1">Classification: @x.Classification</div>
        <div class="card-text p-1">Category: @x.Category</div>
        <div class="card-text p-1">Number of Pages: @x.PageCount</div>
        <div class="card-text p-1">Price: @x.Price</div>
    </div>
    <br />
}


<div page-blah="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>